<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="juanmeanwhile.org.spotifystreamer.PlayerActivityFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Justin Timberlake"
        android:id="@+id/artist"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sex and Magic"
        android:id="@+id/album"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:layout_width="@dimen/player_image_side"
        android:layout_height="@dimen/player_image_side"
        android:id="@+id/pic"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Senyorita"
        android:id="@+id/title"
        android:layout_gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progress_bar"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/progress_bar"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0:00"
            android:id="@+id/current_time"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/bar"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="3:45"
            android:id="@+id/end_time"
            android:layout_gravity="center_horizontal"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">
        <ImageButton
            android:layout_width="@dimen/player_button_side"
            android:layout_height="@dimen/player_button_side"
            android:id="@+id/prev_button"/>

        <ImageButton
            android:layout_width="@dimen/player_button_side"
            android:layout_height="@dimen/player_button_side"
            android:id="@+id/play_button"/>

        <ImageButton
            android:layout_width="@dimen/player_button_side"
            android:layout_height="@dimen/player_button_side"
            android:id="@+id/next_button"/>
    </LinearLayout>
</LinearLayout>
